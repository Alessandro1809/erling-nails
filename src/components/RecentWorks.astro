    <article class=" w-auto h-96 rounded-md bg-gradient-to-t from-white to-transparent overflow-hidden">
        <div class=" inset-0 -z-10 h-full w-full from-white via-slate-400 to-transparent bg-[radial-gradient(#e5e7eb_1px,transparent_1px)] [background-size:16px_16px]"> 
            <div class="w-full h-full relative">
                <img class="w-full h-full object-cover" src="https://res.cloudinary.com/drwd1wtvt/image/upload/v1725497288/unas2_uthtzu.jpg" alt="">
            </div>
        </div>
        
    </article> 
